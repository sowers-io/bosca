{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": [
    "@typescript-eslint",
    "@stylistic/ts"
  ],
  "ignorePatterns": [
    "*/components/ui/*"
  ],
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "@stylistic/ts/quotes": [
      "error",
      "single"
    ],
    "@stylistic/ts/object-curly-spacing": [
      "error",
      "always"
    ],
    "@stylistic/ts/space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "@stylistic/ts/comma-dangle": [
      "error",
      "always-multiline"
    ],
    "@stylistic/ts/indent": [
      "error",
      2
    ],
    "@stylistic/ts/keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off"
  }
}
