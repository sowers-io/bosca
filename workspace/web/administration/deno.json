{
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["./"],
    "exclude": ["./graphql", "./.nuxt", "./.output"]
  },
  "lint": {
    "include": ["./"],
    "exclude": [
      "./graphql",
      "./.nuxt",
      "./.output",
      "./lib/graphql",
      "./components/ui"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "nodeModulesDir": "auto"
}
